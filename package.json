{
	"name": "t3mpl-core",
	"version": "0.3.1",
	"author": "Bartlomiej Tadych (http://n4no.com)",
	"main": "./t3mpl.js",
	"typings": "./t3mpl.d.ts",
	"files": [
		"t3mpl.js",
		"t3mpl.d.ts",
		"core",
		"cli",
		"bin"
	],
	"bin": {
		"t3mpl": "bin/t3mpl"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/b4rtaz/t3mpl-core.git"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"start": "tsc --watch",
		"build": "tsc",
		"test:single": "karma start --single-run",
		"test": "karma start",
		"lint": "tslint --project tsconfig.json",
		"boilerplate": "node t3mpl.js build --manifest=examples/boilerplate-template/template.yaml --outDir=examples/build/ --data=examples/boilerplate-data/data.json",
		"boilerplate:example": "node t3mpl.js build --manifest=examples/boilerplate-template/template.yaml --outDir=examples/build/ --exampleData=true"
	},
	"license": "MIT",
	"dependencies": {
		"dayjs": "^1.9.1",
		"handlebars": "^4.7.6",
		"js-yaml": "^3.14.0",
		"marked": "^1.1.1"
	},
	"devDependencies": {
		"@types/jasmine": "^3.5.14",
		"@types/js-yaml": "^3.12.5",
		"@types/marked": "^1.1.0",
		"@types/node": "^14.6.4",
		"coveralls": "^3.1.0",
		"jasmine-core": "^3.6.0",
		"karma": "^5.2.2",
		"karma-chrome-launcher": "^3.1.0",
		"karma-firefox-launcher": "^1.3.0",
		"karma-jasmine": "^4.0.1",
		"karma-typescript": "^5.1.0",
		"tslint": "~6.1.3",
		"typescript": "^4.0.2"
	}
}
